{
    "version": "3",
    "templates": [
        {
            "id": 1,
            "type": 1,
            "name": "modbus",
            "title": "modbus OPC UA server",
            "description": "MODBUS OPC UA server implements MODBUS TCP protocol and exposes COIL, DI, HREG and IREG registers via OPC UA interface",
            "categories": [ "MODBUS", "OPC UA" ],
            "logo": "https://raw.githubusercontent.com/x-tensive/portainer-templates/refs/heads/main/logo.png",
            "platform": "linux",
            "image": "xtensive/dpa.ua.modbus:latest",
            "command": "--dev:127.0.0.1 --nocert",
            "ports": [ "4840:4840/tcp" ],
            "volumes": [
                {
                    "container": "/dpa/instances"
                }
            ],
            "env": [
                {
                    "name": "DEVICE_IP",
                    "label": "modbus device IP address"
                }
            ],
            "restart_policy": "always"
        },
        {
            "id": 2,
            "type": 1,
            "name": "s7plus-beta",
            "title": "s7plus OPC UA server BETA",
            "description": "s7plus OPC UA server provides an implementation of the S7COMMPLUS protocol, enabling communication with Siemens S7-1200 and S7-1500 controllers.",
            "categories": [ "S7PLUS", "OPC UA" ],
            "logo": "https://raw.githubusercontent.com/x-tensive/portainer-templates/refs/heads/main/logo.png",
            "platform": "linux",
            "image": "xtensive/dpa.ua.s7plus:main",
            "ports": [ "4840:4840/tcp" ],
            "volumes": [
                {
                    "container": "/dpa/instances"
                }
            ],
            "env": [
                {
                    "name": "DPA_DEV",
                    "label": "device IP address"
                },
                {
                    "name": "DPA_DEV_TLS",
                    "label": "enable secured TLS communication"
                },
                {
                    "name": "DPA_DEV_PASSWORD",
                    "label": "controller access password"
                }
            ],
            "restart_policy": "always"
        }
    ]
}